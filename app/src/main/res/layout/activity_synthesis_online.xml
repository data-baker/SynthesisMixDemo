<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SynthesisOnlineActivity">
    <TextView
        android:id="@+id/tv_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="待合成文本：" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="测试一下，这是在线合成的效果。"
        android:gravity="start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tip1" />

    <TextView
        android:id="@+id/tv_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit"
        android:layout_marginTop="16dp"
        android:text="声音：" />

    <EditText
        android:id="@+id/edit_voice"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Lingling"
        android:gravity="start"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_tip2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit" />

    <Button
        android:id="@+id/btn_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="授权"
        android:onClick="onAuthClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_synthesis"
        app:layout_constraintTop_toBottomOf="@id/edit_voice"/>

    <Button
        android:id="@+id/btn_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="初始化"
        android:onClick="onInitClick"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/btn_auth"
        app:layout_constraintRight_toLeftOf="@id/btn_synthesis"
        app:layout_constraintTop_toBottomOf="@id/edit_voice"/>

    <Button
        android:id="@+id/btn_synthesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="合成"
        android:onClick="onSynthesizerClick"
        app:layout_constraintLeft_toRightOf="@id/btn_auth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_voice"/>

</androidx.constraintlayout.widget.ConstraintLayout>